<UserControl x:Class="LoginApp.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginApp"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock Text="Ім'я користувача" Margin="0,0,0,3" />
        <TextBox x:Name="usernameBox" Margin="0,0,0,10" />

        <TextBlock Text="Пароль" Margin="0,0,0,3" />
        <PasswordBox x:Name="passwordBox" Margin="0,0,0,10" />

        <Button Content="Увійти" 
                Background="LightGreen" 
                Foreground="Black" 
                Click="LoginButton_Click" 
                IsDefault="True" />

        <TextBlock x:Name="resultText" Margin="10,10,0,0" Foreground="Blue"/>
    </StackPanel>
</UserControl>
